  </div>
</section>

<%# search_bar %>
<section class="row py-5 my-5">
  <nav class="nav nav-pills nav-fill border justify-content-center"></a>
    <%= link_to 'Pizza', products_path(category_id: 1), class:'nav-link', remote: true %>
