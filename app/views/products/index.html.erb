<h1>Products#index</h1>
<p>Find me in app/views/products/index.html.erb</p>

<% @products.each do |product| %>
  <ul>
    <%= image_tag(product.image_url) %>
    <li><%= product.name %></li>
    <li><%= product.description %></li>
    <li><%= product.price %> &euro;</li>
  </ul>

  <%= link_to "Ajout panier", root_path %>
  
<% end %>