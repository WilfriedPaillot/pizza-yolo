<%# products %>
<section  id="products" class="row justify-content-center py-5 mt-5">
  <% @products.each do |categorie, products| %>
    <div class="col-12 col-md-10 col-lg-8 mb-5">
      <h2 class="text-center mb-2">Carte des <%= pluralize('',categorie.name.downcase) %></h2>
      <h4 class="text-center fw-light"><%= categorie.description %></h4>
    </div>

    <div class="row justify-content-start mt-5">
      <% products.each do |product| %>
      <div class="col-md-4 col-lg-4 mb-5">
        <div class="card border-0">
          <div class="d-flex justify-content-center align-items-center h-100">
            <%= image_tag "https://via.placeholder.com/150", class:'rounded-circle' %>
          </div>
          <div class="card-body">
            <div class="d-flex-column text-center">
              <h2><%= product.name %></h2>
              <p class="fs-3"><%= product.price %><span class="fs-2"> &euro;</span></p>
            </div>
            <p class="card-text"><%= product.description %></p>
            <div class="d-flex justify-content-evenly">
              <%= link_to 'DÃ©couvrir', product, class:'btn-custom p-3' %>
              <%= link_to 'Ajouter au panier', cart_products_path(id:product), method: :post, class:'btn-custom p-3', remote: true %>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  <% end %>
</section>