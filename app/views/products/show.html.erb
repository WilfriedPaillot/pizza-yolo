<section class="row my-5 section-centered">
  <div class="col-12 col-md-6">
    <div class="wrapper d-flex align-items-center justify-content-center h-100">
      <%= image_tag("https://via.placeholder.com/450?text=Pizza-Yolo", class:'img-fluid') %>  
    </div>
  </div>
  <div class="col-12 col-md-6">
    <div class="d-flex flex-column justify-content-center h-100">
      <div class="d-flex justify-content-between">
        <h2><%= @product.name %></h2>
        <p class="fs-3"><%= sprintf('%.2f', @product.price) %><span class="fs-2"> &euro;</span></p>
      </div>
      <div>
        <span class="badge rounded-pill bg-dark"><%= @product.category.name %></span>
      </div>
      <div class="d-flex flex-column align-items-center justify-content-center my-5">
        <p><%= @product.description %></p>
      </div>
      <div class="d-flex justify-content-between">
        <%= link_to 'Ajouter au panier', cart_products_path(id:@product), method: :post, class:'btn btn-custom p-3' %>
        <%= link_to 'La carte', :products, class:'btn btn-custom p-3' %>
      </div>
    </div>
  </div>
</section>