<h1>Users#show</h1>

<h2>Profil</h2>
<p>
  <%= current_user.fullname %><br>
  <%= current_user.address %><br>
  <%= current_user.zipcode %> <%= current_user.city %>
</p>

<p><%= current_user.email %></p>
<p><%= current_user.phone %></p>

<%= link_to 'Editer', edit_user_registration_path(@user), class: 'btn btn-primary' %>

<h2>Status</h2>
<p><%= current_user.fullname %> vous avancez dans votre rang de <%= current_user.status %>.</p> 

<h2>Vos commandes</h2>

<table>
<% if @orders.any? %>
  <% @orders.each do |order| %>
    <tr>
      <td><%= order.id %></td>
      <td><%= order.reference %></td>
      <td><%= order.created_at.strftime('%d/%m/%Y Ã  %H:%M') %></td>
      <td><%= order.total %>&euro;</td>
    </tr>    
  <% end %>
<% else %>
  <tr>
    <td colspan="3">Aucune commande</td>
  </tr>
<% end %>
</table>


<%= link_to 'Retour', :back, class: 'btn btn-primary' %>