document.getElementById('cart_product_sum').innerHTML = ""
document.getElementById('cart_product_sum').innerHTML = "<%= current_user.cart.total_products %>";

document.getElementById('cp_<%=@cart_product.id%>').innerHTML = "";
<% if @cart_product.quantity > 0 %>
  document.getElementById('cp_<%=@cart_product.id%>').insertAdjacentHTML('beforeend', "<%= j render 'cart_products/product', cp: @cart_product %>");
<% else %>
  document.getElementById('cp_<%=@cart_product.id%>').remove();
<%end%>

document.getElementById('total_cart').innerHTML = ""
document.getElementById('total_cart').innerHTML = "TOTAL : " + <%= @cart_product.cart.total_price %> + " &euro;";