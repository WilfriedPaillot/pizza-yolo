<section class="row py-5 my-5">
  <div class="d-flex-column align-items-center justify-content-center text-center">
    <h1>Bienvenue chez Pizza-yolo</h1>
    <p>Votre pizzeria traditionnelle</p>
  </div>
</section>

<%# header_hero %>
<section class="row border py-5 mt-5">
  <h2 class=" text-center">Nouveauté</h2>
  <div class="row mt-5">
    <div class="col-md-6 h-100">
      <div class="d-flex justify-content-center align-items-center h-100">
        <p>ILLUSTRATION</p>
      </div>
    </div>
    <div class="col-md-6">
      <h3>Commandes en ligne</h3>
      <p>Pour offir toujours plus de satifaction, Pizza-Yolo vous permet désormais de commander et régler en ligne !</p>
    </div>
  </div>
  <div class="row-cols-1 text-center mt-5">
    <%= link_to 'Commandez en ligne', :products, class:'btn-custom p-3' %>
  </div>
</section>

<%# top3 %>
<section class="row justify-content-center py-5 mt-5">
  <div class="col-12 col-md-10 col-lg-8 mb-5">
    <h2 class="text-center mb-2">Votre sélection <i class="fs-1">top 3</i></h2>
  </div>
  <div class="row justify-content-between">
    <% @products.each do |product| %>
      <div class="col-md-4 col-lg-4 mb-5">
        <div class="card border-0">
          <div class="d-flex justify-content-center align-items-center h-100">
            <%= image_tag "https://via.placeholder.com/150", class:'rounded-circle' %>
          </div>
          <div class="card-body">
            <h5 class="card-title text-center fs-3"><%= product.name %></h5>
            <p class="card-text"><%= product.description %></p>
            <div class="d-flex justify-content-evenly">
              <%= link_to 'Voir', product, class:'btn-custom p-3' %>
              <%= link_to 'Ajouter au panier', cart_products_path(id:product), method: :post, class:'btn-custom p-3' %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</section>

